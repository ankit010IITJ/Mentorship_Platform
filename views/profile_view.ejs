        }
        
        .sidebar-menu a {
            white-space: nowrap;
        }
        
        .main-content {
            padding: 1.5rem;
        }
        
        .welcome-banner {
            flex-direction: column;
            text-align: center;
            padding: 1.5rem;
        }
        
        .welcome-text {
            margin-bottom: 1.5rem;
        }
        
        .session-item {
            flex-direction: column;
            align-items: flex-start;
        }
        
        .session-time {
            margin-bottom: 1rem;
            margin-right: 0;
        }
        
        .session-details {
            margin-bottom: 1rem;
            width: 100%;
        }
        
        .session-actions {
            width: 100%;
            justify-content: flex-end;
        }
    }
    
    @media (max-width: 480px) {
        .nav-links {
            display: none;
        }
        
