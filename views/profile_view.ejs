    }
    
    .cancel-button {
        background: #f5f5f5;
        color: var(--dark);
    }
    
    .cancel-button:hover {
        background: #e0e0e0;
    }
    
    /* Recent Messages */
    .messages-list {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        overflow: hidden;
    }
    
    .message-item {
        display: flex;
        padding: 1.2rem 1.5rem;
        border-bottom: 1px solid #eee;
        align-items: flex-start;
        cursor: pointer;
        transition: background 0.3s;
    }
    
    .message-item:hover {
        background: #f9f9f9;
    }
    
    .message-item.unread {
        background: rgba(67, 97, 238, 0.05);
    }
    
    .message-avatar {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 1.5rem;
    }
    
    .message-content {
        flex: 1;
    }
    
    .message-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }
    
    .message-sender {
        font-weight: 600;
    }
    
    .message-time {
        font-size: 0.8rem;
        color: #666;
    }
    
    .message-preview {
        color: #555;
        font-size: 0.95rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .unread .message-sender,
    .unread .message-preview {
        font-weight: 600;
    }
    
    /* Responsive */
    @media (max-width: 1024px) {
        .sidebar {
            width: 220px;
            padding: 1.5rem 1rem;
        }
        
