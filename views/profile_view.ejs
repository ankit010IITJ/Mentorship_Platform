        }
        
        .welcome-actions {
            display: flex;
            flex-direction: column;
            width: 100%;
        }
        
        .primary-action {
            margin-right: 0;
            margin-bottom: 1rem;
        }
        
        .session-actions {
            flex-direction: column;
            gap: 0.5rem;
        }
        
        .session-button {
            width: 100%;
        }
    }
</style>

